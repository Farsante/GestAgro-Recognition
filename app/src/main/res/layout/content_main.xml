<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="gestagro.ejemplo.gestagro_recognition.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese la URL de la imagen que desea Escanear:"
                android:textColor="@android:color/background_dark" />

            <EditText
                android:id="@+id/Wurl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="https://www.dinafem.org/uploads/plagas-mosca-minadora_blog_full.jpg" />

            <Button
                android:id="@+id/buttonscan"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginTop="10dp"
                android:onClick="scannear"
                android:text="URL"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttongaleria"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Elegir de la galería"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonphoto"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginTop="10dp"
                android:text="SACAR FOTO"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="300dp"

                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/plaga1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:text="Alternaria"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/pb1"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:progress="0"

                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/plaga2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:text="Cancro de los Cítricos"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/pb2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingRight="10px" />

            <TextView
                android:id="@+id/plaga3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:text="Moho"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/pb3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingRight="10px" />

            <TextView
                android:id="@+id/plaga4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:text="Mosca Blanca"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/pb4"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingRight="10px" />

            <TextView
                android:id="@+id/plaga5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:text="Mosca Minadora"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/pb5"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingRight="10px" />

            <TextView
                android:id="@+id/plaga6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:text="Musgo"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/pb6"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingRight="10px" />

            <TextView
                android:id="@+id/plaga7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:text="Trips"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/pb7"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingRight="10px" />

            <Button
                android:id="@+id/button"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:onClick="Anterior"
                android:text="@string/BotonAnterior"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>